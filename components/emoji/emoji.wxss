.emoji {
    display: none;

    position: absolute;
    left: 2.5%;
    bottom: 120rpx;

    width: 95%;
    border-radius: 20rpx;

    background-color: aqua;
}
.emoji.show {
    display: block;
}
.emoji-list-wrapper {
    box-sizing: border-box;
    padding: 20rpx 15rpx;
}
.emoji-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;

    max-height: 300rpx;
}
.emoji-list-item {
    width: 48rpx;
    height: 48rpx;
    margin: 10rpx;
}
.emoji-list-item image {
    width: 100%;
    height: 100%;
}